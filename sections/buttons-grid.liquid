{{ 'buttons-grid.css' | asset_url | stylesheet_tag }}

<section class="btn-grid">
  {% if section.settings.desktop_image != blank %}
    <div class="btn-grid__media">
      <picture>
        {% if section.settings.mobile_image != blank %}
          <source media="(max-width:989px)" srcset="{{ section.settings.mobile_image | image_url }}">
        {% endif %}
        <img src="{{ section.settings.desktop_image | image_url }}" alt="{{ section.settings.desktop_image.alt }}" class="btn-grid__img">
      </picture>
    </div>
  {% endif %}
  <div class="btn-grid__container">
    {% if section.blocks.size > 0 %}
      <div class="btn-grid__blocks">
        {% for block in section.blocks %}
          <div class="btn-grid__block btn-grid__block--{{ forloop.index }}">
            {% if block.settings.title != blank %}
              <a href="{{ block.settings.link }}" class="btn-grid__block-btn h4 color-light-black2" data-aos="fade-up" data-aos-offset="0" data-aos-duration="800" data-aos-easing="ease-out" style="--aos-translate-y: 5px;">
                <span>
                  {{ block.settings.title }}
                </span>
