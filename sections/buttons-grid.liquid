            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Buttons Grid",
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      }
    ],
    "blocks": [
      {
        "type": "link_block",
        "name": "Link Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "URL"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Buttons Grid",
        "category": "Custom",
        "blocks": [
          {
            "type": "link_block"
          },
          {
            "type": "link_block"
          }
        ]
      }
    ]
  }
{% endschema %}  